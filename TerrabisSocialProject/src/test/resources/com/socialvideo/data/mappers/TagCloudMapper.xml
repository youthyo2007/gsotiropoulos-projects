<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  


<mapper namespace="com.socialvideo.data.mappers.TagCloudMapper">


   <resultMap type="com.socialvideo.data.dto.TagDTO" id="TagDTO">
        <result property="text" column="text"/>
    </resultMap> 



    <select id="selectTagsString" parameterType="map"  resultType="java.lang.String">
       SELECT a.text FROM tagcloud a WHERE 1 = 1 ORDER BY a.text DESC limit 40 
    </select>


    <select id="selectTags" parameterType="map" resultMap="TagDTO">
       SELECT * FROM tagcloud a WHERE 1 = 1 AND a.text LIKE #{tagtext} ORDER BY a.text DESC limit 40 
    </select>

    <select id="selectAllTags" parameterType="map" resultMap="TagDTO">
       SELECT * FROM tagcloud a WHERE 1 = 1 ORDER BY a.text DESC limit 40 
    </select>    
   
   
   
   
</mapper>





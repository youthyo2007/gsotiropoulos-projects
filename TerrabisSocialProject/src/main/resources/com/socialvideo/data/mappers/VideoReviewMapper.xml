<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  


<mapper namespace="com.socialvideo.data.mappers.VideoReviewMapper">


    <resultMap type="com.socialvideo.data.dto.VideoReviewDTO" id="VideoReviewDTO">
        <id column="id" property="id"/>
        <result column="datecreated" property="datecreated"/>           
        <association property="user" column="{userid_fk=userid_fk}" javaType="com.socialvideo.data.dto.UserDTOSmall" select="com.socialvideo.data.mappers.UserMapper.selectVideoReviewDTO_User"/>
    </resultMap> 




    <select id="selectPublicVideoDTO_Reviews" parameterType="map" resultMap="VideoReviewDTO">
        SELECT a.* FROM reviews a WHERE a.videoid_fk = #{videoid_fk} ORDER BY a.datecreated DESC
    </select>







</mapper>    
    
    






